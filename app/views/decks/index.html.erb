<h1>Listing decks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cards</th>
    <th></th>
    <th></th>
  </tr>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.name %></td>
    <td><%= deck.description %></td>

  <% deck.cards.each do |card| %>
  <td><%= card.name %> : <%= card.strength %></td>
  <% end %>

    <td><%= link_to 'Show', deck %></td>
    <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
    <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

